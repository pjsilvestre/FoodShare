extends layout

block content 
    include partials/navbar-authenticated
    div(class="container")
        h1 Create a Listing
        include partials/error-message
        div(class="row")
            div(class="col-md")
                div(class="form-group")
                    label(for="food-item") Food Item
                    input(type="text" class="form-control" name="food-item" placeholder="Enter food item" required)
                div(class="form-group")
                    label(for="amount") Amount
                    input(type="text" class="form-control" name="amount" placeholder="Enter food amount" required)
                div(class="form-group")
                    label(for="meeting-point") Meeting Point
                    input(type="text" class="form-control" name="meeting-point" placeholder="Enter a meeting point" required)
            div(class="col-md")
                label() Food Lifestyle
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="halal")
                    label(class="form-check-label" for="hala" ) Halal
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="kosher")
                    label(class="form-check-label" for="kosher" ) Kosher
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="pescatarian")
                    label(class="form-check-label" for="pescatarian" ) Pescatarian
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="vegan")
                    label(class="form-check-label" for="vegan" ) Vegan 
                div(class="form-check")
                    input(type="checkbox" class="form-check-input" id="vegetarian")
                    label(class="form-check-label" for="vegetarian") Vegetarian
                div(class="form-group")
                    label(for="expiration-date") Expiration Date
                    input(class="form-control" type="date" value="2019-11-26" id="expiration-date")
                button(type="submit" class="btn btn-primary") Publish